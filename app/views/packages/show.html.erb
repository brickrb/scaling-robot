<div class="row">
  <div class="col-md-9">
    <h1> <%= @package.name %> </h1>
    <% if @package.latest_version %>
      <p> <%= @package.description %> </p>
    <% end %>
  </div>

  <div class="col-md-3">
    <br><br>
    <div>
      <span class="glyphicon glyphicon-download-alt"></span>
      <i> brick install <%= @package.name %> </i>
      <hr>
    </div>
    <br>

    <% if @package.latest_version %>
      <div>
        <p>v<%= @package.latest_version.number %> was published <%= time_ago_in_words(@package.latest_version.created_at) %> ago.</p>
        <hr>
        <p>v<%= @package.latest_version_number %> is the latest of <%= @package.versions.count %> versions</p>
        <hr>
        <p><a href="https://github.com/rails/rails">github.com/rails/rails</a></p>
        <hr>
        <p><b><%= @package.latest_version.license %></b> license</p>
      </div>
      <br>

      <div>
        <p><b> Stats: </b></p>
      </div>
      <br>

      <div>
        <p><b> Dependencies: </b></p>
      </div>
      <br>

      <div>
        <p><b> Dependents: </b></p>
      </div>
    <% else %>
      <p>No versions for <%= @package.name %> have been published.</p>
    <% end %>
  </div>
</div>
